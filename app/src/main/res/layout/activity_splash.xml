<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/splash_image"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:src="@drawable/ic_phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/splash_text"
        style="@style/main"
        android:text="@string/splash"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/splash_button"
        app:layout_constraintEnd_toEndOf="@id/splash_image"
        app:layout_constraintStart_toStartOf="@id/splash_image"
        app:layout_constraintTop_toBottomOf="@id/splash_image" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/splash_button"
        style="@style/main.sub"
        android:text="@string/next_screen"
        app:layout_constraintEnd_toEndOf="@id/splash_text"
        app:layout_constraintStart_toStartOf="@id/splash_text"
        app:layout_constraintTop_toBottomOf="@id/splash_text" />

</androidx.constraintlayout.widget.ConstraintLayout>