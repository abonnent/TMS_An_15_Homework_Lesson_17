<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="text.sub">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="main" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textAppearance">@style/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00B9FF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_bottom</item>
    </style>

    <style name="main.sub">
        <item name="android:textAppearance">@style/text.sub</item>
        <item name="android:textColor">#D44ED8</item>
        <item name="backgroundTint">#E67A0D</item>
    </style>
</resources>